<!-- terms.ejs (or terms.html) - ready to use -->
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Terms & Conditions — Asiaa Travel</title>

    <!-- Keep header include (loads bootstrap/fonts/etc) -->
    <%- include('./layouts/header') %>

        <!-- Namespaced Terms CSS (loads after header or can be anywhere) -->
        <style>
            /* NAMESPACE: everything scoped under .terms-page to avoid header/global overrides */
            .terms-page {
                --brand: #ffd400;
                --brand-dark: #ffd400;
                --bg: #f5f7fb;
                --text: #111827;
                --muted: #6b7280;
                --radius: 16px;
            }
            body {
                background-image: url("/assets/cubes.png");
            }

            .terms-page * {
                box-sizing: border-box;
            }

            .terms-page body,
            .terms-page html {
                height: auto;
            }

            .terms-page .wrap {
                max-width: 920px;
                margin: 32px auto;
                padding: 0 18px;
                font-family: "Inter", system-ui, sans-serif;
                color: var(--text);
                background: transparent;
                line-height: 1.65;
            }

            .terms-page .hero {
                border-radius: var(--radius);
                background: #fff;
                border: 1px solid rgba(0, 0, 0, 0.05);
                box-shadow: 0 6px 24px rgba(0, 0, 0, 0.04);
                overflow: hidden;
                margin-top: 8rem;
            }

            .terms-page .hero-head {
                display: flex;
                gap: 16px;
                padding: 32px 22px 8px;
                align-items: center;
            }

            .terms-page .logo-mark {
                width: 58px;
                height: 58px;
                border-radius: 14px;
                background: linear-gradient(135deg, var(--brand) 0%, var(--brand-dark) 100%);
                display: flex;
                align-items: center;
                justify-content: center;
                font-size: 1.1rem;
                font-weight: 700;
                color: #111;
                box-shadow: 0 4px 14px rgba(217, 154, 0, 0.18);
                flex-shrink: 0;
            }

            /* Headings - namespaced and specific to outrank global rules */
            .terms-page h1 {
                font-size: 1.9rem;
                margin: 0;
                font-weight: 700;
                color: var(--text) !important;
                letter-spacing: -0.3px;
            }

            .terms-page h2 {
                font-size: 1.25rem;
                margin: 0 0 8px 0;
                font-weight: 700;
                color: var(--brand-dark) !important;
                line-height: 1.25;
            }

            .terms-page h3 {
                font-size: 1.02rem;
                margin: 12px 0 6px 0;
                font-weight: 600;
                color: #ffd400 !important;
            }

            .terms-page .hero-sub {
                margin-top: 6px;
                font-size: 0.95rem;
                color: var(--muted);
            }

            .terms-page .divider {
                height: 1px;
                margin: 16px 0;
                background: linear-gradient(90deg, transparent, rgba(0, 0, 0, 0.06), transparent);
            }

            .terms-page .card-body {
                padding: 22px 22px 32px;
            }

            .terms-page .section {
                margin-top: 28px;
            }

            .terms-page .section-head {
                display: flex;
                gap: 10px;
                align-items: center;
                margin-bottom: 8px;
            }

            .terms-page .section-icon {
                width: 42px;
                height: 42px;
                border-radius: 12px;
                background: linear-gradient(180deg, #fff, #fff7de);
                border: 1px solid rgba(0, 0, 0, 0.04);
                display: flex;
                justify-content: center;
                align-items: center;
                font-size: 1.1rem;
                color: var(--brand-dark);
                box-shadow: 0 4px 14px rgba(217, 154, 0, 0.10);
                flex-shrink: 0;
            }

            .terms-page .section-desc {
                font-size: 0.95rem;
                color: var(--muted);
                margin-top: 2px;
            }

            /* Lists */
            .terms-page ul {
                padding-left: 0;
                margin-top: 10px;
                margin-bottom: 18px;
            }

            .terms-page ul li {
                list-style: none;
                margin-bottom: 8px;
                padding-left: 34px;
                position: relative;
                font-size: 1rem;
            }

            .terms-page ul li::before {
                content: "";
                width: 18px;
                height: 18px;
                position: absolute;
                left: 0;
                top: 5px;
                background: linear-gradient(180deg, var(--brand), var(--brand-dark));
                border-radius: 6px;
                mask: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><path fill="white" d="M13.854 3.646a.5.5 0 0 1 0 .708l-7.5 7.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L5 10.793l7.146-7.147a.5.5 0 0 1 .708 0z"/></svg>') center/contain no-repeat;
                -webkit-mask: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16"><path fill="white" d="M13.854 3.646a.5.5 0 0 1 0 .708l-7.5 7.5a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L5 10.793l7.146-7.147a.5.5 0 0 1 .708 0z"/></svg>') center/contain no-repeat;
            }

            .terms-page p {
                font-size: 1rem;
                margin-bottom: 8px;
            }

            .terms-page .muted {
                color: var(--muted);
                font-size: 0.95rem;
            }

            /* Make sure links inside terms keep theme */
            .terms-page a {
                color: var(--brand-dark) !important;
                text-decoration: none;
            }

            .terms-page a:hover {
                color: var(--brand) !important;
                text-decoration: underline;
            }

            /* Important overrides for common header conflicts */
            .terms-page h1,
            .terms-page h2,
            .terms-page h3,
            .terms-page p,
            .terms-page ul li {
                /* ensure our font-size, weight, color rules take precedence */
                font-family: "Inter", system-ui, sans-serif !important;
                
            }

            /* Small screens adjustments */
            @media (max-width: 600px) {
                .terms-page .hero-head {
                    flex-direction: column;
                    align-items: flex-start;
                    gap: 8px;
                    padding: 22px;
                }

                .terms-page h1 {
                    font-size: 1.55rem;
                }

                .terms-page h2 {
                    font-size: 1.12rem;
                }

                .terms-page h3 {
                    font-size: 1rem;
                }

                .terms-page .wrap {
                    margin-top: 22px;
                }
            }
        </style>
</head>

