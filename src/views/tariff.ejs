      <!-- Bootstrap JS -->
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

      <script>
        document.addEventListener("DOMContentLoaded", function () {
          const onewayTab = document.querySelector('#oneway');
          const noteBox = document.querySelector('.note-box'); // fixed selector

          if (!onewayTab || !noteBox) return; // prevents null errors

          // Start hidden
         

          // Handle tab switching
          const tabLinks = document.querySelectorAll('[data-bs-toggle="tab"]');
          tabLinks.forEach(tab => {
            tab.addEventListener('shown.bs.tab', function (event) {
              const target = event.target.getAttribute('href');
              if (target === '#oneway') {
                // Show note box smoothly
                setTimeout(() => {
                  noteBox.style.opacity = "1";
                  noteBox.style.transform = "translateY(0)";
                }, 150);
              } else {
                // Hide note box for other tabs
                noteBox.style.opacity = "0";
                noteBox.style.transform = "translateY(10px)";
              }
            });
          });
        });
      </script>


