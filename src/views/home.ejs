<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Asiaa Travel</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/home.css" />

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css" />
  <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

  <link rel="icon" type="image/png" href="/src/public/assets/icon.png" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>

<link rel="icon" type="image/png" href="/src/public/assets/icon.png" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>

<body>
  <%- include('./layouts/header') %>

    
    <!-- Hero Section -->
    <section class="hero d-flex align-items-center text-dark position-relative">
      <div class="container position-relative z-1">
        <div class="row justify-content-center">
          <!-- Form Column -->
          <div class="col-lg-8">
            <div class="booking-section bg-white p-4 rounded shadow">
              <h5 class="text-warning mb-2">BOOK A CAR NOW</h5>
              <h2 class="mb-4">You can book a car with our website</h2>

              <form id="book-trip">
                <!-- Pickup & Drop -->
                <div class="row mb-3">
                  <div class="col-md-6 mb-2 mb-md-0">
                    <select id="pickup-district" name="pickup-district" class="form-control" required>
                      <option value="">Select A pickup location</option>
                      <% for (let i=0; i < data.length; i++) { %>
                        <option value='<%- JSON.stringify(data[i]) %>'>
                          <%= data[i].district %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                  <div class="col-md-6">
                    <select id="drop-district" name="drop-district" class="form-control" required>
                      <option value="">Select A drop location</option>
                      <% for (let i=0; i < data.length; i++) { %>
                        <option value='<%- JSON.stringify(data[i]) %>'>
                          <%= data[i].district %>
                        </option>
                        <% } %>
                    </select>
                  </div>
                </div>

                <!-- Date & Time -->
                <div class="row mb-3">
                  <div class="col-md-6 mb-2 mb-md-0">
                    <input id="trip-date" type="date" class="form-control" required />
                  </div>
                  <div class="col-md-6">
                    <input id="trip-time" type="time" class="form-control" value="19:00" required />
                  </div>
                </div>

                <!-- Travel Type & Vehicle Type -->
                <div class="row mb-3">
                  <div class="col-md-6 mb-2 mb-md-0">
                    <select id="travel-type" class="form-select" required>
                      <option selected disabled value="">Travel Type</option>
                      <option value="onewayTrip">One Way</option>
                      <option value="roundTrip">Round Trip</option>
                    </select>
                  </div>
                  <div class="col-md-6">
                    <select id="vehicle-type" class="form-select" required>
                      <option selected disabled value="">Vehicle Type</option>
                      <option value="Sedan">Sedan</option>
                      <option value="primeSeadan">Prime Sedan</option>
                      <option value="Suv">SUV</option>
                      <option value="primeSuv">Prime SUV</option>
                    </select>
                  </div>
                </div>

                <div class="row mb-3" id="return-time-container" style="display: none">
                  <div class="col-md-12">
                    <input id="return-date" type="date" class="form-control" />
                  </div>
                </div>

                <!-- Name & Mobile -->
                <div class="row mb-3">
                  <div class="col-md-6 mb-2 mb-md-0">
                    <input id="name" type="text" class="form-control" placeholder="Enter Name" />
                  </div>
                  <div class="col-md-6">
                    <input id="mobile" type="tel" class="form-control" placeholder="Your Mobile No." />
                  </div>
                </div>

                <!-- Email -->
                <div class="mb-3">
                  <input id="email" type="email" class="form-control" placeholder="Your Email" />
                </div>

                <!-- Buttons -->
                <div class="d-grid gap-2 mb-2">
                  <button type="button" class="btn btn-warning" onclick="getEstimation()">
                    Get Estimate
                  </button>
                  <button type="submit" class="btn btn-warning">
                    Book Now
                  </button>
                </div>
              </form>
            </div>
          </div>

          <!-- Estimate Results Column -->
          <div class="col-lg-4">
            <div id="estimate-results"
              class="bg-white p-4 rounded shadow h-100 d-flex flex-column justify-content-center">
              <h5 class="text-warning mb-3">ESTIMATE RESULT</h5>
              <div id="estimate-output" class="fs-5 text-dark">
                <p>
                  <strong>Pick up Location:</strong>
                  <span id="pickup-value">–</span>
                </p>

                <p>
                  <strong>Drop Location:</strong>
                  <span id="drop-value">–</span>
                </p>

                <p>
                  <strong>Travel Date & Time:</strong>
                  <span id="date-time-value">–</span>
                </p>

                <p>
                  <strong>Travel Type:</strong>
                  <span id="traveltype-value">–</span>
                </p>

                <p>
                  <strong>Car Type:</strong>
                  <span id="cartype-value">–</span>
                </p>

                <p>
                  <strong>Total No of days :</strong>
                  <span id="days-value">0</span>
                </p>

                <p>
                  <strong>Total km:</strong>
                  <span id="distance-value">0 km</span>
                </p>

                <p>
                  <strong>km per cost:</strong>
                  <span id="km-per-value">0 km</span>
                </p>

                <p>
                  <strong>Driver Batta :</strong>
                  <span id="driver-batta-value">0</span>
                </p>

                <p>
                  <strong>Estimated Fare:</strong>
                  <span id="fare-value">₹0</span>
                </p>

                <p>
                  <strong>Total:</strong>
                  <span id="total-value">₹0</span>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Hero Overlay -->
      <div class="hero-overlay position-absolute inset-0" style="background-color: rgba(0, 0, 0, 0.5)"></div>
    </section>

    <section class="stats-section">
  <div class="container">
    <div class="row text-center">
      <!-- Active Drivers -->
      <div class="col-md-4">
        <div class="stat-box">
          <h2 class="stat-number" data-target="460">0</h2>
          <p class="stat-label">Active Drivers</p>
        </div>
      </div>

      <!-- Happy Clients -->
      <div class="col-md-4">
        <div class="stat-box">
          <h2 class="stat-number" data-target="90">0</h2>
          <p class="stat-label">Happy Clients</p>
        </div>
      </div>

      <!-- Years Experience -->
      <div class="col-md-4">
        <div class="stat-box">
          <h2 class="stat-number" data-target="15">0</h2>
          <p class="stat-label">Years Experience</p>
        </div>
      </div>
    </div>
  </div>
</section>


    <!-- Footer -->
    <%- include('./layouts/footer') %>

      <!-- Bootstrap JS -->

      <script src="/js/home.js" defer></script>
      <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</body>

</html>